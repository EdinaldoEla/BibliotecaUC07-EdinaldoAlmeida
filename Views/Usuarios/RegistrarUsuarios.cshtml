@model Usuario

<div class="row justify-content-md-center">
    <div class="jumbotron col-6">
        <h1>Registrar Usuários</h1>
        <form asp-action="RegistrarUsuarios" method="POST">
            <div class="form-group">
                <input type="text" name="Nome" id="userNome" placeholder="Nome" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="text" name="Login" id="userLogin" placeholder="Login" class="form-control" required />
            </div>
            <div class="form-group">
                <input type="text" name="Senha" id="userSenha" placeholder="Senha" class="form-control" required />
            </div>
            <div class="row">
                <div class="col-md-6">
                    <legend>Tipo</legend>
                    <select name="tipo" id="userTipo">
                        <option value="@Usuario.ADMIN">Administrador</option>
                        <option value="@Usuario.PADRAO">Padrão</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <input type="submit" class="btn btn-primary btn-lg" value="Cadastrar" />
                </div>
            </div>
        </form>
    </div>
</div>