@model List<Usuario>

    <h1>Usuários Cadastrados</h1>

    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="row">Nome</th>
                        <th scope="row">Login</th>
                        <th scope="row">Tipo</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Usuario u in Model)
                    {
                        <tr>
                            <td>@u.Nome</td>
                            <td>@u.Login</td>
                            @if (u.Tipo == Usuario.ADMIN)
                            {
                                <td>Administrador</td>
                            }
                            else
                            {
                                <td>Padrão</td>
                            }

                            <td><a href="/Usuarios/EditarUsuario?Id=@u.Id">Editar</a></td>
                            <td><a href="/Usuarios/ExcluirUsuario?Id=@u.Id">Excluir</a></td>
                            <td><a href="/Usuarios/RegistrarUsuarios?Id=@u.Id">Novo</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>